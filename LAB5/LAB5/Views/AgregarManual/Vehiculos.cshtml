<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@model List<Carros>
@{
    ViewData["Title"] = "Lista de Carros";
    <h1>Lista Carros</h1>

    <div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Placa</td>
                    <td>Color</td>
                    <td>Propietario</td>
                    <td>Latitud</td>
                    <td>Editar</td>
                    <td>Editar</td>
                </tr>
            </thead>

            @foreach (var Carroactual in Model)
            {
                <tr>
                    <td>@Carroactual.placa </td>
                    <td>@Carroactual.color </td>
                    <td>@Carroactual.propiertario </td>
                    <td>@Carroactual.latitud </td>
                    <td>@Carroactual.longitud </td>
                    <td>
                        <a asp-action="Editar" asp-controller="ImprimirTablas" class="btn btn-primary btn-sm">Editar</a>
                    </td>
                </tr>

            }
        </table>
    </div>
}